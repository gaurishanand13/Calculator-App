<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:layout_marginTop="85dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35sp">
        <TextView
                android:text="First Number"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textStyle="bold|italic"/>
        <TextView
                android:id="@+id/firstNumber"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35sp" android:layout_marginTop="25dp">
        <TextView
                android:text="Second Number"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textStyle="bold|italic"/>
        <TextView
                android:id="@+id/secondNumber"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:id="@+id/operationTextView"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="15dp"
            android:layout_marginTop="18dp"/>
    <TextView
            android:id="@+id/AnswerTextView"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:gravity="right"
            android:layout_height="wrap_content" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="246dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/operationTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="50dp">
            <Button
                    android:id="@+id/btn7"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button

                    android:id="@+id/btn8"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn9"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:tag="1"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAdd" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="0dp">
            <Button
                    android:id="@+id/btn4"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn5"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn6"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:tag="2"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSub"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="0dp">
            <Button
                    android:id="@+id/btn1"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn2"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn3"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:text="*"
                    android:tag="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMul"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="0dp">
            <Button
                    android:id="@+id/btnClr"
                    android:text="cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn0"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnEq"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnDiv"
                    android:tag="4"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>